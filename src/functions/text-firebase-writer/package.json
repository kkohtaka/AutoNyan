{
  "name": "text-firebase-writer",
  "version": "1.0.0",
  "description": "Cloud Function for storing Vision API results to Firebase",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "clean": "rm -f *.js *.js.map *.d.ts && rm -rf dist/",
    "test": "jest --config=../../../jest.config.js --testPathPatterns=text-firebase-writer --logHeapUsage",
    "test:coverage": "cd ../../.. && jest --config=jest.config.js --coverage --testPathPatterns=text-firebase-writer --collectCoverageFrom='src/functions/text-firebase-writer/**/*.{ts,tsx}' --collectCoverageFrom='!src/functions/text-firebase-writer/**/*.test.{ts,tsx}' --collectCoverageFrom='!src/functions/text-firebase-writer/**/*.spec.{ts,tsx}' --logHeapUsage",
    "lint": "eslint --config=../../../eslint.config.js --fix",
    "format": "prettier --write '**/*.ts'"
  },
  "dependencies": {
    "@google-cloud/functions-framework": "^4.0.1",
    "@google-cloud/firestore": "^8.0.0",
    "@google-cloud/storage": "^7.17.3",
    "@google/events": "^5.4.0",
    "autonyan-shared": "file:../../shared"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
