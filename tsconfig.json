{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "incremental": true
  },
  "references": [
    {
      "path": "./src/shared"
    },
    {
      "path": "./src/functions/doc-processor"
    },
    {
      "path": "./src/functions/drive-scanner"
    },
    {
      "path": "./src/functions/text-firebase-writer"
    },
    {
      "path": "./src/functions/text-vision-processor"
    }
  ],
  "include": [],
  "exclude": ["node_modules", "dist"]
}
