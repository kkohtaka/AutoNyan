{
  "name": "autonyan-cloud-functions",
  "version": "1.0.0",
  "description": "Google Cloud Functions with TypeScript and Terraform",
  "scripts": {
    "build": "tsc",
    "build:function": "./scripts/build-function.sh",
    "terraform:init": "terraform -chdir=terraform init -backend-config=backend.hcl",
    "terraform:apply": "npm run build:function && terraform -chdir=terraform apply",
    "terraform:destroy": "terraform -chdir=terraform destroy",
    "deploy": "npm run terraform:apply",
    "test": "jest"
  },
  "dependencies": {
    "@google-cloud/functions-framework": "^4.0.0",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.3",
    "typescript": "^5.3.3",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "ts-jest": "^29.4.0"
  }
} 